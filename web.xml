<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <servlet>
        <servlet-name>GameServlet</servlet-name>
        <servlet-class>GameServlet1</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
	
	    <servlet>
        <servlet-name>GameLoginServlet</servlet-name>
        <servlet-class>GameServlet2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>GameHomeServlet</servlet-name>
        <servlet-class>GameServlet3</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameHomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
	
	<servlet>
        <servlet-name>GameAddCreditServlet</servlet-name>
        <servlet-class>GameServlet4</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameAddCreditServlet</servlet-name>
        <url-pattern>/addCredits</url-pattern>
    </servlet-mapping>
	
	<servlet>
        <servlet-name>GameUseCreditServlet</servlet-name>
        <servlet-class>GameServlet5</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameUseCreditServlet</servlet-name>
        <url-pattern>/useCredits</url-pattern>
    </servlet-mapping>
	
	<servlet>
        <servlet-name>GameLogoutServlet</servlet-name>
        <servlet-class>GameServlet6</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameLogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
	
	

</web-app>



